   "compilerOptions": {
     "target": "ES5",
     "strict": true,
     "isolatedModules": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "resolveJsonModule": true
   },
   "include": ["frontend/src/**/*", "backend/src/**/*"],
   "exclude": ["node_modules", "build"]
 }